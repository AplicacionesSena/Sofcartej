<center>
<div class="bani">
  <h1 class="banih slideDown">Videos</h1>
  <%= image_tag("banner.jpg", class: "banii slideDown") %>
  <p class="banip slideDown"><br>Videos relacionados con la aplicación.</p>
</div>
  
  </center>
<% if current_user %>
<% if current_user.role_id == 1 %>
<%= button_to 'Nuevo Video', new_video_path, :method => "get", class: "btn btn-success", remote: true %>
<% end %>
<% end %>
<center>
<div class="convi">
<%= form_tag videos_path, :method => 'get' do %>
  <% content_tag :label do %>
    Buscar por Titulo:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  <% end %>
<% end %>
<div class="conpa">
<span class="label gran"><%= will_paginate @videos, :previous_label => '<span class="label label-success gran">← Anterior</span>'.html_safe, :next_label => '<span class="label label-success gran">Siguiente →</span>'.html_safe %></span>
</div>
<div class="conta2"><span class="label label-default gran">Videos: <%= @videos.count %></span></div>
</div>
<br>
<div class="conim2">
    <%= render @videos %>
</div>
<br>
</center>
