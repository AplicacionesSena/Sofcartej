<center><h1>Videos</h1></center>
<%= button_to 'Nuevo Video', new_video_path, :method => "get", class: "btn btn-success", remote: true %>
<center>
<div class="convi">
<%= form_tag videos_path, :method => 'get' do %>
  <% content_tag :label do %>
    Buscar por Titulo:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  <% end %>
<% end %>
<div class="conpa">
<span class="label gran"><%= will_paginate @videos, :previous_label => '<span class="label label-success gran">← Anterior</span>'.html_safe, :next_label => '<span class="label label-success gran">Siguiente →</span>'.html_safe %></span></div>
<div class="conta2"><span class="label label-default gran">Videos: <%= @videos.count %></span></div>
</div>
<br>
<div class="conim2">
    <%= render @videos %>
</div>
<br>
</center>
