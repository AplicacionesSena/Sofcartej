<%= simple_form_for(@video, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>


  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
    <div class="field">
    <label>Video</label><br>
    <%= f.file_field :vid %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-success" %>
  </div>
<% end %>
