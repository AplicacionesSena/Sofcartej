<tr>
        <td><%= tela.nombre %></td>
        <td><%= tela.tiposTela.nombre %></td>
        <td><%= tela.basesTela.clasificacione.nombre %></td>
        <td><%= tela.composicion%></td>
        <td><%= tela.uso.nombre %></td>
        <td><%= tela.acabado.nombre %></td>
        <td><%= tela.peso %></td>
        <td><%= link_to '<button class="btn btn-default">Ver</button>'.html_safe, tela.document.url %></td>
        <td><a href="#"> </a>
            <ul class="list-inline">
              <li><%= link_to '<button class="btn btn-default"><small>'.html_safe+tela.images.count.to_s+' Fotos →</small><i class="fa fa-picture-o neg"></i></button>'.html_safe, tela_images_path(tela) %></li>
            </ul></td>
        <% if current_user.role_id == 1 %>
        <td>
          <div class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
            ︾</a>
            <ul class="dropdown-menu">
              <li> <%= link_to '<i class="fa fa-eye txt-success"></i><span> Info</span>'.html_safe, tela, remote: true  %></li>
              <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_tela_path(tela), remote: true  %></li>
              <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, tela, method: :delete, data: { confirm: 'Estas segur@?' },remote: true %></li>
            </ul>
          </div>
        </td>
        <% end %>
        
      </tr> 
