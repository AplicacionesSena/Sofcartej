
<tr>
        <td><%= tela.codigo.capitalize %></td>
        <td><%= tela.nombre.capitalize %></td>
        <td><%= tela.basesTela.clasificacione.tiposTela.nombre.capitalize %></td>
        <td><%= tela.basesTela.nombre.capitalize %></td>
        <td><%= tela.composicion.capitalize %></td>
        <td><%= tela.uso.nombre.capitalize %></td>
        <td><%= tela.acabado.nombre.capitalize %></td>
        <td><%= tela.peso.capitalize %></td>
        <% if current_user.role_id == 1 %> 
        <td><%= link_to '<button class="btn btn-default">Ir <i class="fa fa-th-list neg"></i></button>'.html_safe, tela_colores_path(tela) %></td>
        <% end %>
        <td><%= link_to '<button class="btn btn-default">Ver</button>'.html_safe, tela.document.url %></td>
        <td><a href="#"> </a>
            <ul class="list-inline">
              <li><%= link_to '<button class="btn btn-default"><small>'.html_safe+tela.images.count.to_s+' Fotos →</small><i class="fa fa-picture-o neg"></i></button>'.html_safe, tela_images_path(tela) %></li>
            </ul></td>
        <% if current_user.role_id == 1 %> 
        <td>
          <div class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
            ︾</a>
            <ul class="dropdown-menu">
              <li> <%= link_to '<i class="fa fa-plus-square txt-success"></i><span> Info</span>'.html_safe, tela, remote: true  %></li>
              <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_tela_path(tela), remote: true  %></li>
              <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, tela, method: :delete, data: { confirm: 'Estas segur@?' },remote: true %></li>
            </ul>
          </div>
        </td>
        <% else %>
          <td><a href="#"> </a>
            <ul class="list-inline">
              <li><%= link_to '<button class="btn btn-default"><small> Info </small><i class="fa fa-eye"></i></button>'.html_safe, tela, remote: true %></li>
            </ul></td>
        <% end %>
        
      </tr> 