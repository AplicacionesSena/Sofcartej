<center><h1>Características</h1>
</center>
<%= button_to 'Nueva tela', new_tela_path, class: "btn btn-success btn-lg", :method => "get"  %>
<center>
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
  <div class="field">
    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>
    <%= c.predicate_select only: %i(cont) %>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <% end %>
    </div>
  <% end %>
  <div class="actions"><%= f.submit "Buscar" %></div>
<% end %>
<div class="con cen">
<table class="table table-hover table-heading table-striped">
  <thead>
    <tr>
      <th class="cen">Nombre</th>
      <th class="cen">Tipo de tela</th>
      <th class="cen">Clasificación</th>
      <th class="cen">Base</th>
      <th class="cen">Proveedor</th>
      <th class="cen">Ref. Comercial</th>
      <th class="cen">Composicion</th>
      <th class="cen">Ancho de orillo</th>
      <th class="cen">Uso</th>
      <th class="cen">Acabado</th>
      <th class="cen">Peso</th>
      <th class="cen">Peso x unidad</th>
      <th class="cen">Ficha tecnica</th>
      <th class="cen">Imagenes</th>
      <th class="cen" colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @telas.each do |tela| %>
      <tr>
        <td><%= tela.nombre %></td>
        <td><%= tela.tiposTela.nombre %></td>
        <td><%= tela.basesTela.clasificacione.nombre %></td>
        <td><%= tela.basesTela.nombre %></td>
        <td><%= tela.proveedore.nombre %></td>
        <td><%= tela.referenciasComerciale.nombre %></td>
        <td><%= tela.composicion%></td>
        <td><%= tela.anchoOrillo %></td>
        <td><%= tela.uso.nombre %></td>
        <td><%= tela.acabado.nombre %></td>
        <td><%= tela.peso %></td>
        <td><%= tela.pesoUnidad %></td>
        <td><%= tela.fichaTecnica %></td>
        <td><a href="#"> </a>
            <ul class="list-inline">
              <li><%= link_to '<button class="btn btn-default"><small>Fotos →</small><i class="fa fa-picture-o neg"></i></button>'.html_safe, tela_images_path(tela) %></li>
            </ul></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
            ︾</a>
            <ul class="dropdown-menu">
              <li><%= link_to '<i class="fa fa-eye txt-success"></i><span> Ver</span>'.html_safe, tela %></li>
              <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_tela_path(tela) %></li>
              <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, tela, method: :delete, data: { confirm: 'Estas segur@?' }%></li>
            </ul>
          </div>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


</center>