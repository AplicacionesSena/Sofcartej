<center><h1>Características</h1>
</center>
<% if current_user.role_id == 1 %>
<%= button_to 'Nueva tela', new_tela_path, class: "btn btn-success btn-lg", :method => "get", remote: true  %>
<% end %>
<center>
<div class="tbusca">
<%= form_tag telas_path, :method => 'get' do %>
  <% content_tag :label do %>
    Buscar por Nombre, Composición o Peso: 
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  <% end %>
<% end %>
</div><br>
<div class="contenipagi">
  <div class="pagi">
  <span class="label gran"><%= will_paginate @telas, :previous_label => '<span class="label label-success gran">← Anterior</span>'.html_safe, :next_label => '<span class="label label-success gran">Siguiente →</span>'.html_safe %></span>
  </div>
  <div class="conta"><span class="label label-default gran">Telas: <%= @telas.count %></span></div>
</div>
<br>
<div class="con cen">
<table class="table table-hover table-heading table-striped">
  <thead>
    <tr>
      <th class="cen">Nombre</th>
      <th class="cen">Tipo de tela</th>
      <th class="cen">Clasificación</th>
      <th class="cen">Composicion</th>
      <th class="cen">Uso</th>
      <th class="cen">Acabado</th>
      <th class="cen">Peso</th>
      <th class="cen">Ficha tecnica</th>
      <% if current_user.role_id == 1 %>
      <th class="cen" colspan="2">Opciones</th>
      <% else %>
      <th class="cen" colspan="2">Fotos</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @telas %>
  </tbody>
</table>
</div>
<br>


</center>