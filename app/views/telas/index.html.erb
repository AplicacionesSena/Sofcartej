<center><h1>Caracter√≠sticas</h1></center>
<br>

<div class="con">
<table class="table table-hover table-heading table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo de tela</th>
      <th>Base</th>
      <th>Proveedor</th>
      <th>Ref. Comercial</th>
      <th>Composicion</th>
      <th>Ancho de orillo</th>
      <th>Uso</th>
      <th>Acabado</th>
      <th>Peso</th>
      <th>Peso x unidad</th>
      <th>Ficha tecnica</th>
      <th>Imagen</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @telas.each do |tela| %>
      <tr>
        <td><%= tela.nombre %></td>
        <td><%= tela.tiposTela.nombre %></td>
        <td><%= tela.basesTela.nombre %></td>
        <td><%= tela.proveedore.nombre %></td>
        <td><%= tela.referenciasComerciale.nombre %></td>
        <td><%= tela.composicion%></td>
        <td><%= tela.anchoOrillo %></td>
        <td><%= tela.uso.nombre %></td>
        <td><%= tela.acabado.nombre %></td>
        <td><%= tela.peso %></td>
        <td><%= tela.pesoUnidad %></td>
        <td><%= tela.fichaTecnica %></td>
        <td><%= tela.imagen %></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="fa fa-caret-down"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to '<i class="fa fa-eye txt-success"></i><span> Ver</span>'.html_safe, tela %></li>
              <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_tela_path(tela) %></li>
              <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, tela, method: :delete, data: { confirm: 'Estas segur@?' }%></li>
            </ul>
          </div>
       
       
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= button_to 'Nueva tela', new_tela_path, class: "btn btn-success btn-lg", :method => "get"  %>

