<%= simple_form_for(@tela, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @tela.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tela.errors.count, "error") %> prohibited this tela from being saved:</h2>

      <ul>
      <% @tela.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%#= --------------------------------------- primer lado %>
<div class="form1">
  <div class="field">
    <label><b class="text-danger">*</b>Nombre</label><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Base</label><br>
    <%= f.collection_select :basesTela_id, BasesTela.all, :id, :nombre, class: "form-control", prompt: "Seleccione base" %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Proveedor</label><br>
    <%= f.collection_select :proveedore_id, Proveedore.all, :id, :nombre, class: "form-control", prompt: "Seleccione proveedor" %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Composici√≥n</label><br>
    <%= f.text_field :composicion %>
  </div>
   <div class="field">
    <label><b class="text-danger">*</b>Nombre comercial</label><br>
    <%= f.text_field :nombrecomercial %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Referencia comercial</label><br>
    <%= f.text_field :tejido %>
  </div>
  <div class="field">
    <label>Hilos x pulgada</label><br>
    <%= f.text_field :hilosxpulgada %>
  </div>
</div> 
<%#= --------------------------------------- segundo lado %>
<div class="form2">
  <div class="field">
    <label><b class="text-danger">*</b>Ancho total</label><br>
    <%= f.text_field :anchoOrillo %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Uso</label><br>
    <%= f.collection_select :uso_id, Uso.all, :id, :nombre, class: "form-control", prompt: "Seleccione uso" %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Acabado</label><br>
    <%= f.collection_select :acabado_id, Acabado.all, :id, :nombre, class: "form-control", prompt: "Seleccione acabado" %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Peso</label><br>
    <%= f.text_field :peso %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Unidad de peso</label><br>
    <%= f.text_field :pesoUnidad %>
  </div>
  <div class="field">
    <label><b class="text-danger">*</b>Codigo</label><br>
    <%= f.text_field :codigo %>
  </div>

  <div class="field">
    <label>Ficha tecnica</label><br>
    <%= f.file_field :document %>
  </div>
  <div class="field ocultar">
    <%= f.text_field :datos, :value => current_user.nombre+' el dia '+(Date.today).to_formatted_s(:rfc822)  %>
  </div>
</div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-success" %>
  </div>
<% end %>
