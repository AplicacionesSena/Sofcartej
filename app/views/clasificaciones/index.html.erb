<% if current_user.role_id == 1 %>
<center>
<div class="bani">
  <h1 class="banih slideDown">Clasificaciones</h1>
  <%= image_tag("banner.jpg", class: "banii slideDown") %>
  <p class="banip slideDown"><br>Clasificaciones de la tela.</p>
</div>
<div class="peque">
<table class="table table-hover table-heading">
  <thead>
    <tr>
      <th class="cen">Tipos de tela</th>
      <th class="cen">Nombre</th>
      <th class="cen">Descripción</th>
        <th class="cen" colspan="2">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <%= render @clasificaciones %>
  </tbody>
</table>
</div>
<br>
<%= button_to 'Nueva Clasificación', new_clasificacione_path, class: "btn btn-success btn-lg", :method => "get", remote: true %>
</center>
<% else %>
<center>
    <div class="fadeIn derror">
    <%= image_tag ("error.png"), class: "img-rounded", height: '40', width: '40' %>
     <h1>Acceso denegado.</h1>
     <small>Por favor contáctese con el administrador.</small>
    </div>
  </center>
<% end %>