<h1>Tipos de telas</h1>

<table class="table table-hover table-heading">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tipos_telas.each do |tipos_tela| %>
      <tr>
        <td><%= tipos_tela.nombre %></td>
        <td><%= button_to 'Ver', tipos_tela, class: "btn btn-success", :method => "get" %></td>
        <td><%= button_to 'Editar', edit_tipos_tela_path(tipos_tela), class: "btn btn-primary", :method => "get"  %></td>
        <td><%= button_to 'Eliminar', tipos_tela, method: :delete, data: { confirm: 'Estas segur@?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo tipo de tela', new_tipos_tela_path, class: "btn btn-success btn-lg", :method => "get"  %>
