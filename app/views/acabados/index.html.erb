<% if current_user.role_id == 1 %>
<center>
  <div class="bani">
  <h1 class="banih">Acabados</h1>
  <%= image_tag("banner.jpg", class: "banii") %>
  <p class="banip">El acabado de las telas es un proceso que se realiza para modificar su tacto, apariencia o 
  comportamiento, ya que durante la hilatura, lavado y teñido las fibras van perdiendo sus ceras y grasas naturales.</p>
</div>
<div class="convi2">
  <%= form_tag acabados_path, :method => 'get' do %>
    <% content_tag :label do %>
      Buscar por nombre:
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
    <% end %>
  <% end %>
<div class="conpa">
  <span class="label gran"><%= will_paginate @acabados, :previous_label => '<span class="label label-success gran">← Anterior</span>'.html_safe, :next_label => '<span class="label label-success gran">Siguiente →</span>'.html_safe %></span>
</div>
  <div class="conta2"><span class="label label-default gran">Acabados: <%= @acabados.count %></span></div>
</div>
<div class="peque">
<table class="table table-hover table-heading">
  <thead>
    <tr>
      <th class="cen">Nombre</th>
      <th class="cen" colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <%= render @acabados %>
  </tbody>
</table>
</div>
<br>

<%= button_to 'Nuevo Acabado', new_acabado_path , class: "btn btn-success btn-lg", :method => "get", remote: true %>
</center>
<% else %>
<center>
    <div class="fadeIn derror">
    <%= image_tag ("error.png"), class: "img-rounded", height: '40', width: '40' %>
     <h1>Acceso denegado.</h1>
     <small>Por favor contáctese con el administrador.</small>
    </div>
  </center>

<% end %>