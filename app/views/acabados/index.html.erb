<h1>acabados</h1>

<table class="table table-hover table-heading">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @acabados.each do |acabado| %>
      <tr>
        <td><%= acabado.nombre %></td>
        <td><%= button_to 'ver', acabado , class: "btn btn-success", :method => "get"%></td>
        <td><%= button_to 'Editar', edit_acabado_path(acabado) , class: "btn btn-primary", :method => "get" %></td>
        <td><%= button_to 'Eliminar', acabado, method: :delete, data: { confirm: 'Estas segur@?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo Acabado', new_acabado_path , class: "btn btn-success btn-lg", :method => "get"%>
