<h1>Usos</h1>

<table class="table table-hover table-heading">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @usos.each do |uso| %>
      <tr>
        <td><%= uso.nombre %></td>
        <td><%= button_to 'Ver', uso, class: "btn btn-success", :method => "get"  %></td>
        <td><%= button_to 'Editar', edit_uso_path(uso), class: "btn btn-primary", :method => "get"  %></td>
        <td><%= button_to 'Eliminar', uso, method: :delete, data: { confirm: 'Estas segur@?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo Uso', new_uso_path, class: "btn btn-success btn-lg", :method => "get" %>
